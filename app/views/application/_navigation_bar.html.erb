<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t(:app_name), root_path, class: "brand" %>
      <ul class="nav pull-right">
        <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#"
            class="dropdown-toggle"
            data-toggle="dropdown">
            <%= current_user.name %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(:sign_out), signout_path %></li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to t(:sign_in), "/auth/twitter" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="span12">
      <h2>Create a new project</h2>
      <p>Tell us a little bit about this project first.</p>
      <%= form_for @project do |f| %>
        <%= f.label :name, "What do you want to call this project?" %>
        <%= f.text_field :name %>
        
        <%= f.label :address, "Where was it located?" %>
        <%= f.text_field :address %>
        <br />
        <button type="submit" class="btn btn-primary">Create Project</button>
      <% end %>
    </div>
  </div>
</div>